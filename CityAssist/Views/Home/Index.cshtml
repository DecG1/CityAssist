@{
    ViewData["Title"] = "Home";
}

<div class="menu-container">
    <div class="menu-box text-center">
        <img src="~/images/CityAssit_Logo.png" alt="CityAssist Logo" class="menu-logo" />

        <h1 class="menu-title">CityAssist</h1>

        <div class="menu-options">
            <a asp-controller="Issue" asp-action="Report" class="menu-item">
                <img src="~/images/issue_logo.png" class="menu-icon" alt="Report Icon" />
                <span>Report Issue</span>
            </a>
            <a href="javascript:void(0);" onclick="featureComingSoon()" class="menu-item">
                <img src="~/images/Events_logo.png" class="menu-icon" alt="Events Icon" />
                <span>Local Events</span>
            </a>
            <a href="javascript:void(0);" onclick="featureComingSoon()" class="menu-item">
                <img src="~/images/Status_Logo.png" class="menu-icon" alt="Status Icon" />
                <span>Request Status</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function featureComingSoon() {
            alert("This feature is not yet available. Coming Soon!");
        }
    </script>
}
