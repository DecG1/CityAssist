            </a>

            <a href="javascript:void(0);" onclick="featureComingSoon()" class="menu-item">
                <img src="~/images/Status_Logo.png" class="menu-icon" alt="Status Icon" />
                Request Status
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function featureComingSoon() {
            alert("This feature is coming soon!");
        }
    </script>
}
