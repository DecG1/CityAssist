@{
    ViewData["Title"] = "Home";
}

<div class="menu-container">
    <div class="menu-box text-center">
        <img src="~/images/CityAssit_Logo.png" alt="CityAssist Logo" class="menu-logo" />

        <h1 class="menu-title">CityAssist</h1>

        <div class="menu-options">
            <a asp-controller="Issue" asp-action="Report" class="menu-item">
                <img src="~/images/issue_logo.png" class="menu-icon" alt="Report Icon" />
